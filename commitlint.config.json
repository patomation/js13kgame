{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "scope-empty": [2, "never"],
    "scope-enum": [2, "always", [
      "autotile",
      "assets",
      "build",
      "collision",
      "components",
      "color",
      "dialogue-box",
      "docs",
      "example",
      "game-loop",
      "hotkeys",
      "hud",
      "inventory",
      "lib",
      "load",
      "main",
      "optimize",
      "player",
      "render",
      "snabbdom",
      "store",
      "tilemap",
      "tileset",
      "tools",
      "typescript",
      "canvas",
      "view",
      "webpack",
      "zip"
    ]],
    "type-case": [2, "always", "lower-case"],
		"type-empty": [2, "never"],
		"type-enum": [
			2,
			"always",
			[
				"build",
				"chore",
				"ci",
				"docs",
				"feat",
				"fix",
				"perf",
				"refactor",
				"revert",
				"style",
				"test"
			]
		]
  }
}

